alias vi='mvim -v'

if [[ `uname` == 'Linux' ]]; then

  userl=`ps aux | grep ssh | grep priv | wc -l`
  if [ $userl -gt 0 ]
  then
    `echo "ALERT someone has remotely logged in" | festival --tts` &
  fi

fi

if [[ `uname` == 'Darwin' ]]; then
  export CATALINA_HOME=/usr/local/apache-tomcat-6.0.33
fi

